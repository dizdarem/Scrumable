<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.htl_villach.scrumable">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_scrumable_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.AddBacklogItemActivity"></activity>
        <activity
            android:name=".app.DetailsActivity"
            android:label="@string/title_activity_details" />
        <activity
            android:name=".app.ScrumActivity"
            android:label="@string/title_activity_start"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".app.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>